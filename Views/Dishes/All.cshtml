@model List<Dish>

<div>
    <div class="text-center">
        <h3 class="">
            <a asp-controller="Chefs" asp-action="Index">Chefs </a> | 
            Dishes</h3>
    </div>
<div class="d-flex justify-content-between ">
        <p class="">Check out our roster of Chefs!</p>
        <div>
            @* <a asp-action="New" asp-controller="Chefs" >Add a Chef</a> *@
            <a asp-action="New" asp-controller="Dishes" >Add a Dish</a>
            @* <a href="/Chefs/New">Add a Chef</a> *@
        </div>
    </div>
    <hr>

<table class="table table-striped table-light">
    <thead class="thead-dark">
        <tr>
        <th scope="col">#</th>
        <th scope="col">Dish Name</th>
        <th scope="col">Chef</th>
        <th scope="col">Tastiness</th>
        <th scope="col">Calories</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Dish d in Model)
    {
        <tr>
        <th scope="row">@d.DishId</th>
        <td>@d.Name</td>
        <td>@d.dishChef.First @d.dishChef.Last</td>
        <td>@d.Tastiness</td>  
        <td>@d.Calories</td>
        </tr>
    }
    </tbody>
</table>

</div>